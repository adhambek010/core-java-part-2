package com.Edabit;
class Class_1 {
	 int warOfNumbers(int[] arry) {
		 int odd = 0;
		int even = 0;
		int result;
		for(int i = 0; i < arry.length; i++) {
			if(arry[i] % 2 == 0) {
				even += arry[i];
			}
			else {
				odd += arry[i];
			}
			}
		if (odd > even) {
			result = odd;
		}
		else {
			result = even;
		}
		return result;

	}
}
public class Edabit_1 {

	public static void main(String[] args) {
		Class_1 c = new Class_1();
		int[] a = {2, 8, 7, 5};
		System.out.println(c.warOfNumbers(a));	
	}
		


}
