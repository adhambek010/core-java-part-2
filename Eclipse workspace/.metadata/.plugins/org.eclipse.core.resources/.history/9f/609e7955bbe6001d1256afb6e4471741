package com.Edabit;

public class Edabit_1 {

	public static void main(String[] args) {
		int[] arry = {2, 8, 7, 5};
		System.out.println(warOfNumbers(arry));
		
	}
	public static int warOfNumbers(int[] arry) {
		int odd = 0;
		int even = 0;
		int result;
		for(int i = 0; i < arry.length; i++) {
			if(arry[i] % 2 == 0) {
				even += arry[i];
			}
			else {
				odd += arry[i];
			}
		}
		if (odd > even) {
			result = odd;
		}
		else {
			result = even;
		}
		return result;
	}


}
